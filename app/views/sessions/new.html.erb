<h1>Log In</h1>
<script type="text/javascript" language="javascript">
  Growl4Rails.showGrowl({image_path:"/images/download.png", title:"Foo Bar.pdf", message:"File is ready for download."});
</script>
<% form_tag session_path do -%>
<%=link_to 'forgot your login or password', :controller => 'users', :action => 'forgot'%>
<p><%= label_tag 'login' %>
<%= text_field_tag 'login', @login %></p>

<p><%= label_tag 'password' %>
<%= password_field_tag 'password', nil %></p>

<!-- Uncomment this if you want this functionality
<p><%= label_tag 'remember_me', 'Remember me' %>
<%= check_box_tag 'remember_me', '1', @remember_me %></p>
-->

<p><%= submit_tag 'Log in' %></p>
<% end -%>

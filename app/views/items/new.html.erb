<h1>Post a new item!</h1>

<%= error_messages_for :item %>
<% form_for :item, :url => items_path, :html => {:multipart => true} do |f| -%>
<p><%= f.label :name %><br/>
<%= f.text_field :name %></p>

<p><%= f.label :description %><br/>
<%= f.text_area :description %></p>

<p><%= f.label :item_category_id %><br/>
<%= f.text_field :item_category_id %></p>

<p><%= f.label :start_price %><br/>
<%= f.text_field :start_price %></p>

<p><%= f.label :time_limit %><br/>
<%= f.text_field :time_limit %></p>

<p><%= f.label :bin %><br/>
<%= f.check_box :bin %></p>

<p><%= f.label :bin_price %><br />
<%= f.text_field :bin_price %></p>

<p>
  <%= f.label :item_photo %><br />
  <%= f.file_field :item_photo %>
</p>

<p><%= submit_tag 'Post' %></p>
<% end -%>

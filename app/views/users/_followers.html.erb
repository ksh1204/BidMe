<div class="slide_down">
	<h3>Followers</h3>
	<ol>
		<% for follower in @user.followers %>
			<li style="color:black;"><%=link_to follower.login, {:controller => 'users', :action => 'profile', :username=> follower.login} %>
			</li>
		<% end %>
	</ol>
	  <%=link_to_remote 'Close', :url => {:controller => 'users', :action => 'list_followers', :cancel => 'true'}, :html => {:class => 'float-r'}%>
	  <br class='clear'>
</div>

<div id="columns">
	<div id="side">
  		<%= render :partial => 'messagebox_menu' %>
    </div>
    <div id="main">
		<h2>Message to <%= @message.receiver.login %></h2>
		  <table>
			<tr>
				<td>Receiver</td>
				<td><%= @message.receiver.login %></td>
			</tr>
		    <tr>
				<td>Description</td>
				<td><pre><%= @message.description %></pre></td>
			</tr>
		    <tr>
				<td><%= button_to 'Write', :action => 'write_message', :receiver => @message.receiver.login%></td>
		  		<td><%= button_to "Back", request.env["HTTP_REFERER"] %></td>
			</tr>
    </div>
</div>
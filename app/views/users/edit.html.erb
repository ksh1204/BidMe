<%if current_user.is_admin?%>
	<h2>Edit <%=@user.login-%> Profile Information</h2>
<%else%>
	<h2>Edit Your Profile Information</h2>
<%end%>
<%form_for @user, :url => {:action=>'update', :id=>@user.id} do |f|%>
<%=f.error_messages%>
  
  <%=f.label :password%>
  <br/>
  <%=link_to 'Change Password', :action => 'change_password', :id => @user.id%>
  <br/>
  <br/>

  <%=f.label :email%>
  <br/>
  <%=f.text_field :email%>
  <br/>
  <br/>

  <%=f.label :first_name%>
  <br/>
  <%=f.text_field :first_name%>
  <br/>
  <br/>	

  <%=f.label :last_name%>
  <br/>
  <%=f.text_field :last_name%>
  <br/>
  <br/>

  <%=f.label :address%>
  <br/>
  <%=f.text_field :address%>
  <br/>
  <br/>

  <%=f.label :phone%>
  <br/>
  <%=f.text_field :phone%>
  <br />
  <br/>

  <%=f.submit%>
<%end%>
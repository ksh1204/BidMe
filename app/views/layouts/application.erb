<html>
<head>
  <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
  <%= stylesheet_link_tag 'blueprint/screen.css'%>
  <%= stylesheet_link_tag 'blueprint/print.css'%>
  <!--[if lt IE 8]><link rel="stylesheet" href="css/blueprint/ie.css" type="text/css" media="screen, projection"><![endif]-->
  <%= stylesheet_link_tag 'style'%>
  <%= stylesheet_link_tag 'facebox' %>
  <%= include_gritter_and_jquery%>
  <%= javascript_include_tag 'facebox'%>
  <%= javascript_include_tag :juggernaut %>
  <% if current_user %>
  	<%= juggernaut(:client_id => current_user.id) %>
  <% end %>
  <%= javascript_include_tag 'jquery-ui' %>

  


  
  <%= yield :head %>
</head>

<body>

<div id='header'>
  <div class='content'>
    <a href='/' class='span-4'>
    <div id='logo'>
    </div>
    </a>
    <%= render :partial=> 'users/user_bar'%>
    
    <div class='header_link_container'>
    <%=link_to 'About', {:controller => 'base', :action => 'about'}, :class => 'header_link span-4'%>
    <%=link_to 'Contribute', {:controller => 'recipes', :action => 'new'}, :class => 'header_link span-4'%>
    <%=link_to 'Recipes', {:controller => 'recipes', :action => 'index_all'}, :class => 'header_link span-4'%>
    <%=link_to 'Search', {:controller => 'items', :action => 'index'}, :class => 'header_link span-4'%>
    <%if current_user%><%=link_to 'Grocery List', {:controller => 'grocery_ingredients', :action => ''}, :class => 'header_link span-4'%><%end%>
    
    </div>
  </div>
</div>
<div id='main_content' class='content'>
  <%if current_user%>
  	<div id='user_#{current_user.id}'>
	</div>
  <%end%>
  <%=render :partial => 'base/notification'%>

  <%=yield%>
</div>
</body>
</html>